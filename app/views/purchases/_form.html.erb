<script>
  document.addEventListener("DOMContentLoaded", () => {
    const selectElement = document.querySelector(".producto_select");
    const cantidadElement = document.getElementById("cantidad");
    const precioLabel = document.getElementById("precio_unitario_label");
    const precioUnit = document.getElementById("precio_unitario_value");
    const precioTotalVenta = document.getElementById("precio_total_venta");
    const stockLabel = document.getElementById("stock_disponible_label");
  
    if (selectElement && cantidadElement) {   
      const productos = JSON.parse(selectElement.dataset.productos);
  
      const calcularTotal = () => {
        const selectedProductId = parseInt(selectElement.value, 10);
        const selectedProduct = productos.find(product => product.id === selectedProductId);
        if (selectedProduct) {                  
          cantidadElement.value = 0;
          precioTotalVenta.value = 0;  
          document.getElementById("cantidad").max = selectedProduct.stock;
          const precioUnitario = selectedProduct.unit_price;
          precioUnit.value = precioUnitario;
          stockLabel.textContent = `Stock: ${selectedProduct.stock}`;
          precioLabel.textContent = `Precio Unitario: $${precioUnitario}`;
        } else {
          
          cantidadElement.value = 0;
          precioTotalVenta.value = 0;
          precioLabel.textContent = "Precio Unitario: -";
          stockLabel.textContent = `Stock: -`;
          precioUnit.value = "";
        }
      };
  
      selectElement.addEventListener("change", calcularTotal);
      cantidadElement.addEventListener("input", () => {
        const selectedProductId = parseInt(selectElement.value, 10);
        const cantidad = parseInt(cantidadElement.value, 10) || 0;
        const selectedProduct = productos.find(product => product.id === selectedProductId);
  
        if (selectedProduct) {
          const precioTotal = selectedProduct.unit_price * cantidad;
          precioTotalVenta.value = precioTotal.toFixed(2);
        } else {
          precioTotalVenta.value = 0;
        }
      });
    }
  });
  </script>


