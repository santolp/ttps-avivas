<%= form_with(model: purchase, class: "contents") do |form| %>
  <% if purchase.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-lg mt-3">
      <h2><%= pluralize(purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
        <% purchase.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="my-5">
    <%= form.label :employee, "Vendedor" %>
    <div class="block font-bold shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full">
      <%=  current_user.email %>
    </div>    
  </div>
  <div class="my-5">
    <%= form.label :fecha_venta %>
    <div class="block font-bold shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full">
      <%=  Time.now %>
    </div>  
  </div>
  <div class="my-5">
    <%= form.label :producto_id %>
  </div>
  <div class="my-5">
    <%= form.select(:productos, @productos.map { |w| [w.full_name]  }) %>
  </div>

  <div class="my-5">
    <%= form.label :cantidad %>
    <%= form.number_field :cantidad, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :precio_unitario %>
    <%= form.text_field :precio_unitario, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :precio_total_venta %>
    <%= form.text_field :precio_total_venta, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="my-5">
    <%= form.label :nombre_cliente %>
    <%= form.text_field :nombre_cliente, class: "block shadow rounded-md border border-gray-400 outline-none px-3 py-2 mt-2 w-full" %>
  </div>

  <div class="inline">
    <%= form.submit class: "rounded-lg py-3 px-5 bg-blue-600 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
