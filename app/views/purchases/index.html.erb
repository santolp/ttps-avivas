<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Ventas" %>
  
  <table class="table table-bordered table-hover table-responsive">
  <div class="flex justify-between items-center">
    <%= link_to "Nueva Venta", new_purchase_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <h1 class="font-bold text-4xl">Listado de Ventas</h1>
    
      <thead >
        <tr>
          <th>Empleado</th>
          <th>Fecha Venta</th>
          <th>Cantidad</th>
          <th>Precio Unitario</th>
          <th>Precio Total</th>
          <th>Producto</th>
          <th>Cliente</th>
          <th colspan="3">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @purchases.each do |purchase| %>
        <tr>
          <td><%= @users[purchase.user_id].try(:email) %></td>
          <td> <%= purchase.created_at  %></td>
          <td> <%= purchase.cantidad  %></td>
          <td> <%= purchase.precio_unitario  %></td>     
          <td> <%= purchase.precio_total_venta  %></td>   
          <td> <%= @productos[purchase.producto_id].try(:name)  %>
             
            </td>   
          <td> <%= purchase.nombre_cliente   %></td>    
          <td>  <%= link_to "Ver Detalle de Venta", purchase, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>      </td>     
        </tr>
      <% end %>       

      </tbody>
    
  </div>

  
    
  
  </div>
</table>
</div>
