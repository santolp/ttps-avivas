<div>
  <div>
    <h1>Bienvenidos a Admin section</h1>
    <h2>Crear User</h2>
    <button class="btn btn-success">Crear Usuario</button>
  </div>

  <p></p>

  <h1>Listado de usuarios actuales</h1>
  <span></span>
  <div class="container">
    <% @users.each do |user| %>

    <div class="row align-items-start">
      <div class="row">
        <div class="col">
          <h2>Email</h2>
          <%= user.email %>
        </div>
        
        <div class="col">
          <h2>Rol</h2>
          
          <%= form_for(user,url:admin_path(user),remote:true , method: :patch) do |f| %>
            <%= f.select(:role, User.roles.keys.map { |w| [w]  }) %>
            <%= f.submit "Update Role" , :class=>"btn btn-warning" %>
          <% end %>


          <!-- <%= form_with(scope: "Role") do |f| %>
           <%= f.select :id, User.roles.keys.map  {|u| u},{selected:user.role} %> 
          <% end %> -->
          
        </div>
      </div>
    </div>

    <%end %>
  </div>
</div>
