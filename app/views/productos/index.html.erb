<%= stylesheet_link_tag 'producto', media: 'all', data: { turbolinks: false } %> 

<div class="w-full">
  <% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice-index"><%= notice %></p>
<% end %>

  <% content_for :title, "Productos" %>
  <%= link_to(image_tag("avivas_logo_white.png"),"/") %>
  
    <div class="flex justify-between items-center">
      
      <h1 class="font-bold text-4xl">Productos</h1>
      <!-- <%= link_to "Producto Nuevo" , new_producto_path, class:"p-2 rounded-lg bg-blue-500 text-blue-100" %> -->
    </div>

        <div id="product-list" class="min-w-full grid grid-cols-4 gap-8">
          <% @productos.each do |producto| %>
            <%= render producto %>
              <p class="product-show-btn">
                <%= link_to "Ver este Producto" , producto %>
              </p>
              <% end %>
        </div>
    </div>