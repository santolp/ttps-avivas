<%= form_with(model: producto) do |form| %>
  <% if producto.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(producto.errors.count, "error") %> prohibited this producto from being saved:</h2>

      <ul>
        <% producto.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

 
  <div class="my-5">
    <%= form.label :description, style: "display: block" %>
    <%= form.text_field :description %>
  </div>

  <div class="my-5">
    <%= form.label :images, style: "display: block" %>
    <%= form.file_field :images, multiple: true %>
  </div>

  <div class="my-5">
    <%= form.label :unit_price, style: "display: block" %>
    <%= form.text_field :unit_price %>
  </div>

  <div class="my-5">
    <%= form.label :stock, style: "display: block" %>
    <%= form.number_field :stock %>
  </div>

  <div class="my-5">
    <%= form.label :category, style: "display: block" %>
    <%= form.text_field :category %>
  </div>

  <div class="my-5">
    <%= form.label :size, style: "display: block" %>
    <%= form.text_field :size %>
  </div>

  <div class="my-5">
    <%= form.label :color, style: "display: block" %>
    <%= form.text_field :color %>
  </div>

  <div class="my-5">
    <%= form.submit %>
  </div>
<% end %>
